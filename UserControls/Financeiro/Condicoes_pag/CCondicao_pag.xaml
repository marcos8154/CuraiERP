<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.UserControls.Financeiro.Condicoes_pag"
             xmlns:Components="clr-namespace:EM3.Components" x:Class="EM3.UserControls.Financeiro.Condicoes_pag.CCondicao_pag"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="600" d:DesignWidth="1024" Background="White">
    <Grid>

        <Components:Cabecalho Title="Nova condição de pagamento" x:Name="cabecalho" VerticalAlignment="Top"/>

        <Components:NormalButton x:Name="btCancelar" OnClick="btCancelar_OnClick" Text="Cancelar" FontSize="13" Margin="0,40,205,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="84" Height="38"/>
        <Components:ConfirmButton Text="Salvar" x:Name="btSalvar" OnClick="btSalvar_OnClick" FontSize="13" HorizontalAlignment="Right" Margin="0,40,10,0" VerticalAlignment="Top" Height="38"/>
        <Components:NormalButton  FontSize="13" OnClick="btSalvarEContinuar_OnClick" x:Name="btSalvarEContinuar" Text="Savar e continuar" HorizontalAlignment="Right" Margin="0,40,75,0" VerticalAlignment="Top" Height="38"/>

        <!-- Inputs -->
        <Components:Input Index="1" x:Name="txCod" IsNumeric="True" Title="Código" Enabled="False" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" Height="56" Width="70"/>
        <Components:ComboBox Required="True" Index="2" OnChange="cbCond_pag_OnChange" x:Name="cbCond_pag" Title="Cond. pagamento" Items="Dinheiro; Cartão; Cheque; Crédito cliente; Boleto;" HorizontalAlignment="Left" Margin="85,83,0,0" VerticalAlignment="Top" Height="56" Width="220"/>
        <Components:Input Index="3" x:Name="txDescricao" Required="true" Title="Descrição" HorizontalAlignment="Left" Margin="310,83,0,0" VerticalAlignment="Top" Height="56" Width="449"/>
        <Components:ComboBox Index="4" x:Name="cbInativo" Title="Inativo" Items="NÃO; SIM;" HorizontalAlignment="Left" Margin="764,83,0,0" VerticalAlignment="Top" Height="56" Width="70"/>
        <Components:ComboBox Index="5" x:Name="cbPermite_entrada" Title="Entrada" Items="SIM; NÃO;" HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top" Height="56" Width="70"/>
        <Components:ComboBox Index="6" OnChange="cbTipo_intervalo_OnChange" x:Name="cbTipo_intervalo" Title="Intervalo" Items="Intervalo; Dia base;" HorizontalAlignment="Left" Margin="85,144,0,0" VerticalAlignment="Top" Height="56" Width="110"/>
        <Components:Input Index="8" IsNumeric="True" MaxValue="31" x:Name="txIntervalo" Title="Intervalo (dias)" HorizontalAlignment="Left" Margin="200,144,0,0" VerticalAlignment="Top" Height="56" Width="105"/>

        <Components:SearchBox Index="9" CallSearch="txCod_operadora_CallSearch" x:Name="txCod_operadora" Title="Op. cartão" HorizontalAlignment="Left" Margin="310,144,0,0" VerticalAlignment="Top" Height="56" Width="80"/>
        <Components:SimpleInput Index="80" x:Name="txDesc_operadora" Enabled="False" HorizontalAlignment="Left" Margin="395,170,0,0" VerticalAlignment="Top" Width="439" Height="29"/>

        <Components:SearchBox Index="10" x:Name="txCod_conta" CallSearch="txCod_conta_CallSearch" Title="Conta" HorizontalAlignment="Left" Margin="310,209,0,0" VerticalAlignment="Top" Height="56" Width="80"/>
        <Components:SimpleInput Index="100" x:Name="txDesc_conta" Enabled="False" HorizontalAlignment="Left" Margin="395,235,0,0" VerticalAlignment="Top" Width="439" Height="29"/>
        <Components:Input Index="11" IsNumeric="True" MaxValue="31" x:Name="txTolerancia" Title="Tolerância (dias)" HorizontalAlignment="Left" Margin="10,209,0,0" VerticalAlignment="Top" Height="56" Width="105"/>
        <Components:Input Index="12" IsMoney="True" MaxValue="1000" x:Name="txJuros_atraso" Title="Juros atraso (%)" HorizontalAlignment="Left" Margin="120,209,0,0" VerticalAlignment="Top" Height="56" Width="105"/>
        <Components:Input Index="13" IsNumeric="True" MaxValue="1000" x:Name="txParcelas" Title="Parcelas" HorizontalAlignment="Left" Margin="230,209,0,0" VerticalAlignment="Top" Height="56" Width="75"/>

    </Grid>
</UserControl>
