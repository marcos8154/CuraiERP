<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.UserControls.Financeiro.Conta_bancarias"
             xmlns:Components="clr-namespace:EM3.Components" x:Class="EM3.UserControls.Financeiro.Conta_bancarias.CContas_bancarias"
             mc:Ignorable="d" 
                Loaded="UserControl_Loaded"
             d:DesignHeight="600" d:DesignWidth="1024" Background="White">
    <Grid>

        <Components:Cabecalho Title="Nova conta bancária" x:Name="cabecalho" VerticalAlignment="Top"/>

        <Components:NormalButton x:Name="btCancelar" OnClick="btCancelar_OnClick" Text="Cancelar" FontSize="13" Margin="0,40,205,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="84" Height="38"/>
        <Components:ConfirmButton Text="Salvar" x:Name="btSalvar" OnClick="btSalvar_OnClick" FontSize="13" HorizontalAlignment="Right" Margin="0,40,10,0" VerticalAlignment="Top" Height="38"/>
        <Components:NormalButton  FontSize="13" OnClick="btSalvarEContinuar_OnClick" x:Name="btSalvarEContinuar" Text="Savar e continuar" HorizontalAlignment="Right" Margin="0,40,75,0" VerticalAlignment="Top" Height="38"/>

        <Components:Input x:Name="txCod" Title="Código" Enabled="False" IsNumeric="True" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Height="56" Width="60"/>
        <Components:Input Index="1" x:Name="txNome" Title="Nome" Required="True" HorizontalAlignment="Left" Margin="75,84,0,0" VerticalAlignment="Top" Height="56" Width="505"/>
        <Components:SearchBox Index="2" x:Name="txCod_banco" CallSearch="txCod_banco_CallSearch" Title="Banco" Required="True" HorizontalAlignment="Left" Margin="585,84,0,0" VerticalAlignment="Top" Height="56" Width="70"/>
        <Components:SimpleInput x:Name="txNome_banco" Enabled="False" Margin="660,110,10,0" VerticalAlignment="Top" Height="30"/>

        <Components:Input Index="3" x:Name="txAgencia" Title="Agência" MaxLength="5" Required="True" HorizontalAlignment="Left" Margin="12,145,0,0" VerticalAlignment="Top" Height="56" Width="120"/>
        <Components:Input Index="4" x:Name="txDv_agencia" Required="true" Title="Dv. Agencia" MaxLength="2" HorizontalAlignment="Left" Margin="137,145,0,0" VerticalAlignment="Top" Height="56" Width="88"/>
        <Components:Input Index="5" x:Name="txConta" MaxLength="10" Title="Conta" Required="True" HorizontalAlignment="Left" Margin="12,206,0,0" VerticalAlignment="Top" Height="56" Width="120"/>
        <Components:Input Index="6" x:Name="txDv_conta" MaxLength="2" Title="Dv. Conta" Required="True" HorizontalAlignment="Left" Margin="137,206,0,0" VerticalAlignment="Top" Height="56" Width="88"/>
        <Components:Input Index="7" x:Name="txCarteira" MaxLength="4" Title="Carteira" Required="true" HorizontalAlignment="Left" Margin="230,145,0,0" VerticalAlignment="Top" Height="56" Width="110"/>
        <Components:Input Index="10" x:Name="txCorrentista" Title="Correntista" HorizontalAlignment="Left" Margin="345,145,0,0" VerticalAlignment="Top" Height="56" Width="235"/>
        <Components:Input Index="11" x:Name="txSaldo_atual" Title="Saldo atual (R$)" IsMoney="True" MaxValue="1000000000000000000000000" HorizontalAlignment="Left" Margin="585,145,0,0" VerticalAlignment="Top" Height="56" Width="174"/>
        <Components:Input Index="12" x:Name="txLimiteCredito" Title="Lim. crédito (R$)" IsMoney="True" MaxValue="1000000000000000000000000" HorizontalAlignment="Left" Margin="585,206,0,0" VerticalAlignment="Top" Height="56" Width="174"/>
        <Components:ComboBox Index="13" x:Name="cbInativo" Title="Inativo" Required="True" Items="NÃO; SIM;" HorizontalAlignment="Left" Margin="764,145,0,0" VerticalAlignment="Top" Height="56" Width="101"/>

    </Grid>
</UserControl>
