<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.UserControls.Estoque.Produto"
             xmlns:Components="clr-namespace:EM3.Components" x:Class="EM3.UserControls.Estoque.Produto.CProdutos"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024" Background="White">
    <Grid>

        <Components:Cabecalho Title="Novo produto" x:Name="cabecalho" VerticalAlignment="Top" Height="35"/>

        <Components:VerticalSeparator HorizontalAlignment="Right" Margin="0,64,289,0" VerticalAlignment="Top" Height="27" Width="20"/>
        <Components:ComboBox x:Name="cbOpcoes" Title="Outras Opções" OnChange="ComboBox_OnChange" Items="Selecione uma opção;Calculadora;Ficha do produto;Tabela de preço;Copiar;" HorizontalAlignment="Right" Margin="0,35,309,0" VerticalAlignment="Top" Height="56" Width="170"/>

        <Components:NormalButton x:Name="btCancelar" OnClick="btCancelar_OnClick" Text="Cancelar" FontSize="13" Margin="0,53,205,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="84" Height="38"/>
        <Components:ConfirmButton Text="Salvar" x:Name="btSalvar" OnClick="btSalvar_OnClick" FontSize="13" HorizontalAlignment="Right" Margin="0,53,10,0" VerticalAlignment="Top" Height="38"/>
        <Components:NormalButton  FontSize="13" OnClick="btSalvarEContinuar_OnClick" x:Name="btSalvarEContinuar" Text="Savar e continuar" HorizontalAlignment="Right" Margin="0,53,75,0" VerticalAlignment="Top" Height="38"/>

        <ScrollViewer Margin="0,96,0,0">
            <Grid>
                <Components:Input x:Name="txCod" Title="Código" IsNumeric="True" Enabled="False" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="56" Width="60"/>
                <Components:Input Index="1" x:Name="txDescricao" Title="Descrição" Required="True" MaxLength="300" Margin="75,0,469,0" VerticalAlignment="Top" Height="56" Width="Auto"/>
                <Components:Input Index="2" x:Name="txReferencia" Title="Referência" MaxLength="10" HorizontalAlignment="Right" Margin="0,0,374,0" VerticalAlignment="Top" Height="56" Width="90"/>
                <Components:Input Index="3" x:Name="txEAN" Title="EAN" Required="True" HorizontalAlignment="Left" Margin="12,58,0,0" VerticalAlignment="Top" Height="56" Width="163"/>
                <Components:SearchBox Index="4" x:Name="txNcm" IsNumeric="False" Title="NCM" CallSearch="txNcm_CallSearch" Required="True" HorizontalAlignment="Left" Margin="180,58,0,0" VerticalAlignment="Top" Height="56" Width="136"/>
                <Components:SearchBox Index="5" x:Name="txOrigem" Title="Origem" CallSearch="txOrigem_CallSearch" Required="True" Margin="321,58,0,0" VerticalAlignment="Top" Height="56" Width="85" HorizontalAlignment="Left"/>
                <Components:SimpleInput x:Name="txDesc_origem" Enabled="False" Margin="411,85,469,0" VerticalAlignment="Top" Height="29"/>
                <Components:Input Index="6" x:Name="txANP" Title="Código ANP" MaxLength="10" IsNumeric="True" Margin="0,58,375,0" VerticalAlignment="Top" Height="56" Width="90" HorizontalAlignment="Right"/>

                <Components:SearchBox Index="7" x:Name="txCod_classe_imposto" Title="Classe de Imposto" CallSearch="txCod_classe_imposto_CallSearch" Required="True" HorizontalAlignment="Left" Margin="12,120,0,0" VerticalAlignment="Top" Height="56" Width="128"/>
                <Components:SimpleInput x:Name="txDesc_classeImp" Enabled="False" Margin="145,149,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="171"/>

                <Components:SearchBox Index="8" x:Name="txGrupo" Title="Grupo" CallSearch="txGrupo_CallSearch" HorizontalAlignment="Left" Margin="321,120,0,0" VerticalAlignment="Top" Height="56" Width="85"/>
                <Components:SimpleInput x:Name="txDesc_grupo" Enabled="False" Margin="411,149,374,0" VerticalAlignment="Top"/>

                <Components:SearchBox Index="9" x:Name="txUnidade" Title="Unidade" CallSearch="txUnidade_CallSearch" Required="True" HorizontalAlignment="Left" Margin="12,178,0,0" VerticalAlignment="Top" Height="56" Width="70"/>
                <Components:SimpleInput x:Name="txDesc_unidade" Enabled="False" HorizontalAlignment="Left" Margin="87,207,0,0" VerticalAlignment="Top" Width="188"/>

                <Components:SearchBox Index="10" x:Name="txUnidade2" Title="Unidade 2" CallSearch="txUnidade2_CallSearch" HorizontalAlignment="Left" Margin="280,178,0,0" VerticalAlignment="Top" Height="56" Width="70"/>
                <Components:SimpleInput x:Name="txDesc_unidade2" Enabled="False" Margin="355,207,464,0" VerticalAlignment="Top"/>

                <Components:Input Index="11" x:Name="txFator_conv" Title="Fator conv." MaxValue="10000000" IsNumeric="True" Margin="0,178,375,0" VerticalAlignment="Top" Height="56" Width="84" HorizontalAlignment="Right"/>
                <Components:Input Index="12" x:Name="txPonto_ped" Title="Ponto pedido" IsMoney="True" MaxValue="10000000000000000" HorizontalAlignment="Left" Margin="12,238,0,0" VerticalAlignment="Top" Height="56" Width="90"/>
                <Components:Input Index="13" x:Name="txPreco_venda" Title="Preço venda (R$)" IsMoney="True" MaxValue="100000000000000000000" HorizontalAlignment="Left" Margin="107,238,0,0" VerticalAlignment="Top" Height="56" Width="108"/>
                <Components:Input Index="14" x:Name="txUlt_preco" Title="Últ. preço (R$)" IsMoney="True" MaxValue="100000000000000000000" HorizontalAlignment="Left" Margin="220,238,0,0" VerticalAlignment="Top" Height="56" Width="96"/>

                <Components:SearchBox Index="15" x:Name="txMarca" Title="Marca" HorizontalAlignment="Left" Margin="321,238,0,0" VerticalAlignment="Top" Height="56" Width="70"/>
                <Components:SimpleInput x:Name="txDesc_marca" Enabled="False" Margin="396,267,374,0" VerticalAlignment="Top"/>

                <Components:Input Index="16" x:Name="txCusto_standard" Title="Custo padrão (R$)" IsMoney="True" MaxValue="100000000000000000000" HorizontalAlignment="Left" Margin="12,300,0,0" VerticalAlignment="Top" Height="56" Width="119"/>
                <Components:Input Index="17" x:Name="txComissao" Title="Comissão (%)" IsMoney="True" MaxValue="100" HorizontalAlignment="Left" Margin="136,300,0,0" VerticalAlignment="Top" Height="56" Width="93"/>
                <Components:Input Index="18" x:Name="txPeso_liquido" Title="Peso liquido" IsMoney="True" MaxValue="100" HorizontalAlignment="Left" Margin="234,300,0,0" VerticalAlignment="Top" Height="56" Width="82"/>
                <Components:Input Index="19" x:Name="txFabricante" Title="Fabricante" Margin="321,300,483,0" VerticalAlignment="Top" Height="56" Width="Auto"/>
                <Components:Input Index="20" x:Name="txCod_fabricante" Title="Cod. Fabricante" Margin="0,300,374,0" VerticalAlignment="Top" Height="56" Width="104" HorizontalAlignment="Right"/>
                <Components:SearchBox Index="21" x:Name="txProd_equiv" Title="Prod. equivalente" Margin="12,360,0,0" VerticalAlignment="Top" Height="56" Width="119" HorizontalAlignment="Left"/>
                <Components:DatePicker Index="22" x:Name="txUlt_compra" Title="Ult. compra" Margin="136,360,0,0" VerticalAlignment="Top" Height="56" Width="154" HorizontalAlignment="Left"/>

                <Components:SearchBox Index="23" x:Name="txForn_padrao" Title="Forn. padrão" Margin="12,425,0,0" VerticalAlignment="Top" Height="56" Width="85" HorizontalAlignment="Left"/>
                <Components:SearchBox Index="24" x:Name="txEmpresa_padrao" Title="Loja padrão" CallSearch="txEmpresa_padrao_CallSearch" Margin="102,425,0,0" VerticalAlignment="Top" Height="56" Width="80" HorizontalAlignment="Left"/>
                <Components:SearchBox Index="25" x:Name="txLocal_padrao" Title="Local padrão" CallSearch="txLocal_padrao_CallSearch" Required="True" Margin="187,425,0,0" VerticalAlignment="Top" Height="56" Width="103" HorizontalAlignment="Left"/>
                <Components:Input Index="26" x:Name="txGarant_loja" Title="Garantia Loja" MaxValue="10000000" IsNumeric="True" Margin="295,360,0,0" VerticalAlignment="Top" Height="56" Width="96" HorizontalAlignment="Left"/>
                <Components:Input Index="27" x:Name="txGarant_forn" Title="Garantia Forn." MaxValue="10000000" IsNumeric="True" Margin="295,425,0,0" VerticalAlignment="Top" Height="56" Width="96" HorizontalAlignment="Left"/>

                <Components:ComboBox Index="28" x:Name="cbInativo" Title="Inativo" Items="NÃO;SIM;" HorizontalAlignment="Left" Margin="396,360,0,0" VerticalAlignment="Top" Height="56" Width="59"/>
                <Components:ComboBox Index="29" x:Name="cbFracionavel" Title="Fracionável" Items="NÃO;SIM;" HorizontalAlignment="Left" Margin="460,360,0,0" VerticalAlignment="Top" Height="56" Width="79"/>
                <Components:ComboBox Index="30" x:Name="cbBalanca" Title="P/ balança" Items="NÃO;SIM;" HorizontalAlignment="Left" Margin="544,360,0,0" Height="56" Width="88" VerticalAlignment="Top"/>
                <Components:ComboBox Index="31" x:Name="cbInsumo" Title="Insumo" Items="NÃO;SIM;" HorizontalAlignment="Left" Margin="396,425,0,0" VerticalAlignment="Top" Height="56" Width="59"/>
                <Components:ComboBox Index="32" x:Name="cbFabricado" Title="Fabricado" Items="NÃO;SIM;" HorizontalAlignment="Left" Margin="460,425,0,0" VerticalAlignment="Top" Height="56" Width="79"/>

                <Components:SearchBox Index="33" x:Name="txCod_caracteristica" Title="Característica" CallSearch="SearchBox_CallSearch" HorizontalAlignment="Right" Margin="0,0,279,169" VerticalAlignment="Bottom" Height="56" Width="90"/>

                <DataGrid x:Name="dataGrid_caract" PreviewKeyUp="dataGrid_caract_PreviewKeyUp" HorizontalAlignment="Right" Margin="0,0,10,3" Width="359" Height="161" VerticalAlignment="Bottom">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" MinWidth="80" Width="Auto" Binding="{Binding Id, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="Atributo" MinWidth="120" Width="Auto" Binding="{Binding Atributo, Mode=TwoWay}"/>
                        <DataGridTextColumn Header="Valor" MinWidth="100" Width="*" Binding="{Binding Valor, Mode=TwoWay}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Components:ImageButton ImageSource="cancel.png" OnClick="ImageButton_OnClick" HorizontalAlignment="Right" Margin="0,0,10,169" VerticalAlignment="Bottom" Height="32" Width="35"/>
                <Components:ImageSelector HorizontalAlignment="Right" Margin="0,0,10,230" Width="359"/>
            </Grid>
        </ScrollViewer>

    </Grid>
</UserControl>
