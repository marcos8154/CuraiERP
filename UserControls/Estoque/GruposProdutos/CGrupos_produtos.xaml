<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.UserControls.Estoquev.GruposProdutos"
             xmlns:Components="clr-namespace:EM3.Components" xmlns:Armazem="clr-namespace:EM3.UserControls.Estoquev.Armazem" x:Class="EM3.UserControls.Estoquev.GruposProdutos.CGrupos_produtos"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024" Background="White">
    <Grid>

        <Components:Cabecalho x:Name="cabecalho" Title="Novo grupo de produtos" VerticalAlignment="Top"/>
        <Components:NormalButton x:Name="btCancelar" OnClick="btCancelar_OnClick" Text="Cancelar" FontSize="13" Margin="0,40,205,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="84" Height="38"/>
        <Components:ConfirmButton Text="Salvar" x:Name="btSalvar" OnClick="btSalvar_OnClick" FontSize="13" HorizontalAlignment="Right" Margin="0,40,10,0" VerticalAlignment="Top" Height="38"/>
        <Components:NormalButton  FontSize="13" OnClick="btSalvarEContinuar_OnClick" x:Name="btSalvarEContinuar" Text="Savar e continuar" HorizontalAlignment="Right" Margin="0,40,75,0" VerticalAlignment="Top" Height="38"/>

        <Components:Input x:Name="txCod" IsNumeric="True" Title="Código" Enabled="False" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" Height="56" Width="75"/>
        <Components:Input x:Name="txNome" Title="Nome" Required="True" MaxLength="100" HorizontalAlignment="Left" Margin="90,83,0,0" VerticalAlignment="Top" Height="56" Width="300"/>
        <Components:ComboBox x:Name="cbInativo" Required="True" Title="Inativo" Items="NÃO;SIM" HorizontalAlignment="Left" Margin="395,83,0,0" VerticalAlignment="Top" Height="56" Width="132"/>

        <Label x:Name="label" Content="Imagem" HorizontalAlignment="Left" Margin="11,147,0,0" VerticalAlignment="Top" Foreground="#FF5B5B5B" FontSize="13.333"/>
        <Border CornerRadius="3" BorderBrush="Gray"  BorderThickness="1.5"  HorizontalAlignment="Left" Height="305" Margin="13,174,0,0" VerticalAlignment="Top" Width="330">
            <Grid Background="#FFFDFDFD" Margin="3,4,4,2">
                <Image x:Name="image" Height="250" VerticalAlignment="Top" OpacityMask="Black"/>
                <Components:SimpleInput x:Name="txCaminhoImg" HorizontalAlignment="Left" Margin="5,0,0,10" VerticalAlignment="Bottom" Width="265"/>
                <Components:NormalButton Text=". . ." x:Name="btSelecionarImg" OnClick="btSelecionarImg_OnClick" HorizontalAlignment="Right" Margin="0,0,5,10" VerticalAlignment="Bottom" Height="28" Width="40"/>
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
