<UserControl x:Class="EM3.Components.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.Components"
             mc:Ignorable="d" 
             d:DesignHeight="20" MaxHeight="15" Background="Blue" d:DesignWidth="300">
    <Grid Background="White" Margin="1">
        <Grid x:Name="gridProgress" HorizontalAlignment="Left" Width="10">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                    <GradientStop Color="#FF10B5BD" Offset="0"/>
                    <GradientStop Color="#FF05768F" Offset="0.567"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>

    </Grid>
</UserControl>
