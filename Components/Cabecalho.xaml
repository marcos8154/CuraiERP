        </Grid.Background>
        <Label x:Name="lbTitulo" Content="Título da rotina" HorizontalAlignment="Left" Margin="3,1,0,1" Foreground="#FF383640" FontSize="18" Width="477" FontFamily="Yu Gothic UI" FontWeight="Bold"/>
