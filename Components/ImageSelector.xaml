<UserControl x:Class="EM3.Components.ImageSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.Components"
             xmlns:Components="clr-namespace:EM3.Components"
             mc:Ignorable="d" 
             d:DesignHeight="340" d:DesignWidth="330">
    <Grid>
        <Label x:Name="label" Content="Imagem" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF5B5B5B" FontSize="13.333"/>
        <Border CornerRadius="3" BorderBrush="Gray"  BorderThickness="1.5" Margin="0,28,0,2">
            <Grid Background="#FFFDFDFD" Margin="3,4,4,2">
                <Image x:Name="image" OpacityMask="Black" Stretch="Fill" Margin="0,0,0,46"/>
                <Components:SimpleInput x:Name="txCaminhoImg" Margin="5,0,50,10" VerticalAlignment="Bottom"/>
                <Components:NormalButton Text=". . ." x:Name="btSelecionarImg" OnClick="btSelecionarImg_OnClick" HorizontalAlignment="Right" Margin="0,0,5,10" VerticalAlignment="Bottom" Height="28" Width="40"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
