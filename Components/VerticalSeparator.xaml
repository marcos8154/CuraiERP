<UserControl x:Class="EM3.Components.VerticalSeparator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid>
            <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                <Label x:Name="lbTextNormal" FontSize="50"  Margin="7,4" HorizontalContentAlignment="Center" Content=". . ." Padding="8,0,5,0" Height="101" RenderTransformOrigin="0.5,0.5" Width="86" Foreground="#FFA4A0A0" FontWeight="Bold">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="89.671"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
