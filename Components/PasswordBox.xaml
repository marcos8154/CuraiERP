             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.Components"
             mc:Ignorable="d" Height="56.068" MaxHeight="56.068" Width="174.351">
    <Grid>
        <Border x:Name="border" Padding="5" CornerRadius="3" BorderThickness="1" BorderBrush="#FFACA6A6" SnapsToDevicePixels="True" Background="White" Margin="0,27,0,0">
            <PasswordBox FontSize="13" Name="txInput" Background="Transparent" BorderThickness="0" Margin="-3,-4" Padding="0,4,0,0" />
