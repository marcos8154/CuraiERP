<UserControl x:Class="EM3.Components.Paginator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM3.Components"
             mc:Ignorable="d" 
              d:DesignHeight="30.026" d:DesignWidth="130" MinWidth="130">
    <Grid>
        <local:NormalButton x:Name="btPrevious" OnClick="btPrevious_OnClick" MinWidth="30" IsFontBold="True" Text="&lt;" HorizontalAlignment="Left" Width="40"/>
        <local:NormalButton x:Name="btNext" OnClick="btNext_OnClick" MinWidth="30" IsFontBold="True" Text=">" HorizontalAlignment="Right" Width="40"/>
        <local:SimpleInput x:Name="txPageNumber" InputKeyDown="txPageNumber_InputKeyDown" IsNumeric="True" Margin="45,0" Height="Auto"/>

    </Grid>
</UserControl>
