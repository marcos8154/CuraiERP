        <Border BorderBrush="White" BorderThickness="3" Height="2" Margin="0,45,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="191"/>
        <Label x:Name="label_Copy1" Content="Application Connector" VerticalAlignment="Top" FontSize="14.667" FontFamily="Microsoft JhengHei UI" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" Width="191" HorizontalContentAlignment="Center" Margin="0,45,10,0"/>
        <Label x:Name="label_Copy2" Content="1.0.171401" VerticalAlignment="Bottom" FontSize="14.667" FontFamily="Microsoft JhengHei UI" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" Width="96" HorizontalContentAlignment="Center"/>
        <Label x:Name="label_Copy3" Content="Powered by" VerticalAlignment="Top" FontSize="9.333" FontFamily="Microsoft JhengHei UI" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" Width="80" HorizontalContentAlignment="Center" Margin="0,215,411,0"/>

    </Grid>
</Window>
